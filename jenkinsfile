pipeline{
    agent any
    stages{
        stage("Build"){
            steps{
                echo "Build code with Maven"
            }
            post{
                always{
                    mail to: "jordantanderson@outlook.com.au",
                    subject: "Build Status Email",
                    body: "Build log attached!"
                }
            }
        }
        stage("Test"){
            steps{
                echo "unit testing with JUnit"
                echo "integration testing with TestNG"
            }
        }
        stage("Code Analysis"){
            steps{
                echo "analysing code quality with CodeSonar "
            }
        }
        stage("Security Scan "){
            steps{
                echo "OWASP performing security scan"
            }
        }
        stage("Integration tests on staging"){
            steps{
                echo "Running integration tests on staging environment with Selenium"
            }
        }
        stage("Deploy to production"){
            steps{
                echo "Deploying to AWS"
            }post{
                success{
                    mail to: "jordantanderson@outlook.com.au",
                         subject: "Build Success",
                         body: "The build has succeeded. Check the logs for details." 
                }failure {
                    mail to: "jordantanderson@outlook.com.au",
                         subject: "Build Failed",
                         body: "The build has failed. Check the logs for details."
                }

            
            }
        }
    }
    
}
