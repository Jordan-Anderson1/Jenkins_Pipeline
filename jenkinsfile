pipeline{
    agent any
    stages{
        stage("Build"){
            steps{
                echo "Build code with Maven"
            }
            
        }
        stage("Test"){
            steps{
                script {
                    echo 'Unit testing with JUnit'
                    echo 'Integration testing with TestNG'
                }
            }
            post{
                success{
                    emailext(
                        attachLog: true,
                        mailto: 'jordantanderson@outlook.com.au',
                        subject: 'Testing success!',
                        body: 'Test log attached!',
                        )
                        
                    
                }
                failure{
                    emailext(
                        attachLog: true,
                        to: 'jordantanderson@outlook.com.au',
                        subject: 'Testing failed!',
                        body: 'Test log attached!',)
                    
                }
            }
        }
        stage("Code Analysis"){
            steps{
                echo "analysing code quality with CodeSonar "
            }
        }
        stage("Security Scan "){
            steps{
                echo "OWASP performing security scan"
            }
            post{
                 success{
                    mail to: "jordantanderson@outlook.com.au",
                    subject: "Security scanning success!",
                    body: "security testing log attached!"
                }
                failure{
                    mail to: "jordantanderson@outlook.com.au",
                    subject: "Security Scanning failed!",
                    body: "security testing log attached!"
                }
            }
        }
        stage("Integration tests on staging"){
            steps{
                echo "Running integration tests on staging environment with Selenium"
            }
        }
        stage("Deploy to production"){
            steps{
                echo "Deploying to AWS"
            }
        }
    }
    
}
